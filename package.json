{
  "name": "decidim-module-notify",
  "version": "2.0.0",
  "description": "A conversation tracker for Decidim",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Platoniq/decidim-module-notify.git"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint -c .eslintrc.json --no-error-on-unmatched-pattern --ignore-pattern app/packs/vendor --ext .js app/packs",
    "lint-fix": "eslint -c .eslintrc.json --no-error-on-unmatched-pattern --ignore-pattern app/packs/vendor --ext .js app/packs --fix",
    "markdownlint": "markdownlint '**/*.md'",
    "stylelint": "stylelint app/packs/**/*.scss",
    "stylelint-fix": "stylelint app/packs/**/*.scss --fix",
    "prettier": "prettier --check 'app/packs/**/*.scss'",
    "prettify": "prettier --write 'app/packs/**/*.scss'",
    "linthtml": "linthtml app/**/*.html.erb app/cells/**/*.erb"
  },
  "keywords": [
    "decidim"
  ],
  "author": "ivan@platoniq.net",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/Platoniq/decidim-module-notify/issues"
  },
  "homepage": "https://github.com/Platoniq/decidim-module-notify#readme",
  "stylelint": {
    "extends": "@decidim/stylelint-config"
  },
  "prettier": "@decidim/prettier-config",
  "devDependencies": {
    "@decidim/dev": "^0.28.4",
    "@decidim/eslint-config": "^0.28.4",
    "@decidim/prettier-config": "^0.28.4",
    "@decidim/stylelint-config": "^0.28.4"
  },
  "dependencies": {
    "@decidim/browserslist-config": "^0.28.4",
    "@decidim/webpacker": "^0.28.4",
    "@rails/actioncable": "6.1.7"
  },
  "browserslist": ["extends @decidim/browserslist-config"]
}
