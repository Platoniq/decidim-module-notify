<%= render partial: "decidim/shared/component_announcement" %>

<div class="row notify-container">
  <div class="columns smallmedium-9">
    <div class="section">

      <% if allowed_to? :create, :notes %>
        <div class="card card--notes-editor">
          <div class="card-section">
            <%= form_for(@form, url: conversations_path, remote: true, html: { class: "form new_note", data: nil }) do |f| %>
              <input type="hidden" name="_method" value="post">
              <%= render partial: "form", object: f %>

              <div class="float-right text-right">
                <p class="help-text"><%= t("decidim.notify.conversations.tip") %></p>
                <button type="reset" class="button secondary tiny"><%= t("decidim.notify.conversations.reset") %></button>
              </div>
              <div class="button--double form-conversations-submit">
                  <%= f.submit t(".send") %>
                  <div class="info">âœ”</div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <div id="notify-notes">
        <% @notes.group_by(&:chapter).each do |chapter, notes| %>
          <%= render layout: "chapter", locals: { chapter: chapter } do %>
            <%= render partial: "note", collection: notes %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="columns smallmedium-3">
    <div class="card">
      <div class="card-section" id="notify-participants">
        <%= render partial: "participant", collection: @participants %>
      </div>
    </div>
  </div>
</div>

<%= render partial: "script.js", locals: { id: current_component.id } %>
