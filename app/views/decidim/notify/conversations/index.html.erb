<%= render partial: "decidim/shared/component_announcement" %>

<div class="row notify-container">
  <div class="columns small-9">
    <div class="section">

      <% if allowed_to? :create, :notes %>
        <div class="card">
          <div class="card-section">
            <%= decidim_form_for(@form, url: conversations_path, remote: true, html: { class: "form new_note" }) do |f| %>
              <%= render partial: "form", object: f %>

              <div class="button--double form-conversations-submit">
                  <%= f.submit t(".send") %>
                  <div class="info">âœ”</div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="card">
        <div class="card-section" id="notify-notes">
          <%= render partial: "note", collection: @notes %>
        </div>
      </div>
    </div>
  </div>
  <div class="columns small-3">
    <div class="card">
      <div class="card-section" id="notify-participants">
        <%= render partial: "participant", collection: @participants %>
      </div>
    </div>
  </div>
</div>

<%= render partial: "script.js", locals: { id: current_component.id } %>
