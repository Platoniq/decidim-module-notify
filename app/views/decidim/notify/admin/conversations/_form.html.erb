<label for="users_list">
  <b><%= t("users", scope: "activemodel.attributes.notify_config") %></b>
  <select id="users_list"
          placeholder="<%= t("users_picker.choose_users", scope: "decidim.notify.admin.conversations") %>"
          data-tm-name="users"
          data-tm-items="<%= @users.to_json %>"
          data-tm-no-results="<%= t("users_picker.no_users", scope: "decidim.notify.admin.conversations") %>"
          class="mt-4 pb-4" multiple>
    <% current_organization.users.pluck(:id, :name).each do |id, name| %>
      <option value="<%= id %>"><%= name %> </option>
    <% end %>
  </select>
</label>

<label for="users_list pb-4">
  <b><%= t("note_takers", scope: "activemodel.attributes.notify_config") %></b>
  <select id="users_list"
          placeholder="<%= t("users_picker.choose_users", scope: "decidim.notify.admin.conversations") %>"
